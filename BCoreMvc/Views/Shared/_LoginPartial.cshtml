@using Microsoft.AspNetCore.Identity
@using BCore.Dal.Ef

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form name="logoutForm" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@UserManager.GetUserName(User) <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="#" onclick="document.forms[0].submit();return false;">log off</a></li>                    
                    <li><a href="/Profile/Profile?returnUrl=@Context.Request.Path">profile</a></li>                    
                </ul>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
        <li><a asp-controller="Account" asp-action="Signin">Sign in</a></li>        
    </ul>
}
